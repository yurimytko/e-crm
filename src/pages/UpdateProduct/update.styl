.update_page
    background: rgba(243, 243, 243, 1)
    width 100%
    height: 100vh
    display: flex

.update_field
    display: flex
    padding: 4vh
    width 100%
    justify-content: space-around
    box-sizing: border-box

.left_up_model
    width 30vw
    height: 90vh
    display: flex
    flex-direction: column

.img_preview
    padding 1vh 1vw
    box-sizing: border-box
    border-radius: 1vh
    width 30vw
    height: 45vh
    background: white

.img_wrapper {
    margin-top 1vh
    width: 100%;
    height: 26.5vh;
    border-radius: 1vh;
    border: 1px dashed rgba(105, 105, 105, 1);
    padding: 2vh; /* Ensure padding is applied */
    box-sizing: border-box; /* Include padding and border in size calculations */
    display: flex;
    justify-content: center;
    align-items: center;
    overflow: hidden;

    .preview_img {
        width: 100%; /* Fit the image to the wrapper's width */
        height: 100%; /* Fit the image to the wrapper's height */
        object-fit: contain; /* Ensure the image scales while maintaining aspect ratio */
    }
}
.section_set
    padding 1vh
    box-sizing: border-box
    margin-top 2vh
    border-radius: 1vh
    width 30vw
    height: 10vh
    background: white
.sec
    width 30vw


.weight
    padding 1vh
    box-sizing: border-box
    margin-top 2vh
    border-radius: 1vh
    width 30vw
    height: 18vh
    background: white
.models_con
    margin-top 1vh
    display: flex
    gap 0.3vw
    flex-wrap: wrap
.model_name
    color: black
    cursor pointer
    border-radius: 1vh
    padding: 0.5vh
    font-family: Inter;
    font-size: 1.5vh;
    font-weight: 400;
    background: rgba(133, 212, 169, 1)
    transition: 0.2s
.active_model
    transition: 0.2s

    cursor default
    border-radius: 1vh
    padding: 0.5vh
    font-family: Inter;
    font-size: 1.5vh;
    font-weight: 400;
    color: white
    background: rgba(33, 150, 83, 1)
.date_review
    margin-top 3vh
    display: flex
    justify-content: space-between
    width 30vw
.reviews_btn
    cursor pointer
    display: flex
    justify-content: center
    align-items: center
    border-radius: 1vh
    border none
    background: white
    padding: 1vh
    gap 0.4vw
    font-family: Inter;
    font-size: 15px;
